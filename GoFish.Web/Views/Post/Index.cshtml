@model GoFish.Web.Models.Post.PostIndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>@Model.Title</h1>

<div>
    Author: @Model.AuthorName (@Model.AuthorRating)<br />
    Created: @Model.Created
</div>

<div>
    @Model.PostContent
</div>

@if (Model.Replies.Any())
{
    foreach (var reply in @Model.Replies)
    {
        <div>
            <div>Reply Author: @reply.AuthorName</div>
            <div>Reply Created: @reply.Created</div>
        </div>
        <div>
            Reply: @reply.ReplyContent
        </div>
    }
}

